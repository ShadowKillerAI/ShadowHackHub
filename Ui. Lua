-- Shadow X Hub | ui.lua
-- Lightweight UI library inspired by Redz and Alchemy

local library = {}

function library:CreateWindow(title)
    local UI = {}
    local screen = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
    screen.Name = "ShadowX_UI_" .. math.random(1000,9999)
    
    local main = Instance.new("Frame", screen)
    main.Size = UDim2.new(0, 450, 0, 320)
    main.Position = UDim2.new(0.5, -225, 0.5, -160)
    main.BackgroundColor3 = Color3.fromRGB(25, 25, 35)
    main.Active = true
    main.Draggable = true
    main.Name = "MainFrame"

    local titleBar = Instance.new("TextLabel", main)
    titleBar.Size = UDim2.new(1, 0, 0, 30)
    titleBar.BackgroundTransparency = 1
    titleBar.Text = title
    titleBar.Font = Enum.Font.GothamBold
    titleBar.TextColor3 = Color3.fromRGB(255, 255, 255)
    titleBar.TextSize = 20

    function UI:CreateTab(tabTitle)
        local tab = {}
        local frame = Instance.new("Frame", main)
        frame.Size = UDim2.new(1, 0, 1, -40)
        frame.Position = UDim2.new(0, 0, 0, 40)
        frame.BackgroundTransparency = 1

        function tab:CreateToggle(name, callback)
            local toggle = Instance.new("TextButton", frame)
            toggle.Size = UDim2.new(0, 200, 0, 30)
            toggle.Position = UDim2.new(0, 10, 0, #frame:GetChildren() * 35)
            toggle.BackgroundColor3 = Color3.fromRGB(50, 50, 70)
            toggle.Font = Enum.Font.Gotham
            toggle.TextColor3 = Color3.fromRGB(255,255,255)
            toggle.Text = "❌ " .. name
            toggle.TextSize = 14
            toggle.AutoButtonColor = false

            local state = false
            toggle.MouseButton1Click:Connect(function()
                state = not state
                toggle.Text = (state and "✅ " or "❌ ") .. name
                pcall(callback, state)
            end)
        end

        function tab:CreateButton(name, callback)
            local button = Instance.new("TextButton", frame)
            button.Size = UDim2.new(0, 200, 0, 30)
            button.Position = UDim2.new(0, 10, 0, #frame:GetChildren() * 35)
            button.BackgroundColor3 = Color3.fromRGB(90, 90, 130)
            button.Font = Enum.Font.Gotham
            button.TextColor3 = Color3.fromRGB(255,255,255)
            button.Text = name
            button.TextSize = 14
            button.MouseButton1Click:Connect(function()
                pcall(callback)
            end)
        end

        return tab
    end

    return UI
end

return library 
